.experience-line
    background url(../img/experience-line.png) no-repeat
    width      50px
    height     1271px
    position   absolute
    top        0
    left       35%
    display none

    // @media (min-width:800px)
    //     display block

.job-info
    & > h1
        color          #fff
        font-size      26px
        text-transform uppercase

    & > ul
        clear      both
        color      #000
        font-size  16px
        font-style italic
        list-style none
        margin     0
        padding    0

        & > li
            margin-bottom 10px

.view-btn
    background    url(../img/view-btn.png) no-repeat
    width         179px
    height        32px
    text-indent   -9999em
    display       block
    float         right
    text-align    left
    margin-bottom 30px

.job-desc
    color #000

    & > h2
        font-size      20px
        text-transform capitalize

    & > p
        font-size   14px
        margin      0


.modal-content
    background    #f3f3f3
    border-radius 10px
    padding       20px
    text-align    left
    max-width     780px
    margin        10px auto
    position      relative
    text-transform capitalize

    @media (min-width:800px)
        padding 20px 100px

    & > h2
        color       black
        font-size   24px
        font-weight 400

    & > img
        width 100%
        height auto
        display block
        margin 0 auto 50px

    & > p
        color     #2d2d2d
        font-size 16px

    & > p > a
        font-weight 700
        color       #2d2d2d
        font-size   12px

        &:hover
            text-decoration underline

        & + a
            margin-left  10px
            padding-left 10px
            border-left  solid 1px #2d2d2d

.footer
    background #0F7B50
    padding 10px 5%
.footer-text
    text-align right
    color black
    & > a
        color white
