//Imports
@import 'nib'
@import 'jeet'
//Mixins
normalize-css()

//Variables
$yellow = #faee4e
$red    = #d80000
$green  = #6FCE2F

//Styles
body
    font-size   14px
    line-height 22px
    font-family 'Open Sans', Verdana, sans-serif
    color       #ddd
    height      100%
    background  #f3f3f3

a
    text-decoration none

.nav-top-wrap
    background    linear-gradient(#fff 50%, #f2f3f2 80%)
    height        80px
    width         100%
    border-bottom solid 1px #539b23
    box-shadow    0 1px 0 #66be2b
    box-sizing    border-box
    padding       30px 5%
    position      fixed
    top           0
    z-index       10

    h1
        display none

.nav-links
    float       right
    margin      0 12px 0 0
    padding     0
    list-style  none
    font-weight bold
    font-size   14px

    & > li
        float left

    & > li > a
      padding       10px 30px
      margin-right  20px
      border-radius 30px
      color         black
      background    transparent
      transition    background 0.2s ease-out, color 0.2s ease-out

    & > li > a.active
    & > li > a:hover
            background $green
            color      white

.nav-animation
    left       0
    position   absolute
    margin-top -120px
    transition margin-top 0.8s ease-in-out

    &.active
        margin-top -30px

.social-links
    float      right
    margin     -10px 0 0
    padding    0
    list-style none

    & > li
        float         left
        width         37px
        height        37px
        border-radius 50%
        line-height   35px
        background    #000
        text-align    center
        margin-right  5px

    & > li > a
        width   100%
        height  100%
        display block

    & > li > a > img
        vertical-align middle

.page-content
    clear both

.container
    width     100%
    margin    0 auto
    position  relative

.hero
    background $green
    min-height 550px
    color      white
    padding    80px 5% 0


    @media screen and (min-width:1600px)
        min-height 780px

    @media screen and (min-width:2000px)
        min-height 850px

    h1
        font-size   32px
        font-weight 600
        line-height 1.2
        padding-top 180px


        @media screen and (min-width:1600px)
            font-size 50px
            padding-top 350px

        @media screen and (min-width:2000px)
            font-size 60px
            padding-top 330px


    .left-col
        span(1/2)
        line-height  1.6
        font-size    16px
        font-weight  300
        box-sizing   border-box
        // padding-left 150px

        @media screen and (min-width:1024px)
            font-size    14px
            line-height  1.6

        @media screen and (min-width:1600px)
            font-size    18px
            line-height  1.8

        @media screen and (min-width:2000px)
            font-size    20px
            line-height  1.8

    .right-col
        span(1/2)
        position relative
        min-height 550px

        @media screen and (min-width:1600px)
            min-height 780px

        @media screen and (min-width:2000px)
            min-height 850px


        & > img
            width    100%
            height   auto
            position absolute
            bottom   0
            right    0

            @media screen and (min-width:2000px)
                width    auto

.counter-box
    position         absolute
    border           solid 10px #fafafa
    box-shadow       0 1px 0 #000
    box-sizing       border-box
    background-color #cbcbcb
    width            155px
    height           155px
    top              -55px
    left             0
    text-align       center
    padding          30px 0
    z-index          11

    @media screen and (min-width:1600px)
        width   255px
        height   255px
        padding 50px 0

    & > p
        margin 0

.counter-box p
    font-size 14px
    padding   0 5px

    @media screen and (min-width:1600px)
        font-size 20px

.count
    font-size 60px

    @media screen and (min-width:1600px)
        font-size 120px


.count-number
    line-height 55px
    font-size   18px
    font-weight 700

    @media screen and (min-width:1600px)
        line-height 110px
        font-size   36px

.projects
    clearfix()
    list-style none
    margin     0
    padding    50px 10%
    clear      both

    @media screen and (min-width:1280px)
        padding 50px 5%

    & > li
        position   relative
        width      100%
        float      left
        box-sizing border-box
        box-shadow 2px 0 2px #b5b5b5
        border     6px solid #fff
        margin     0 0 20px 0

        @media screen and (min-width:480px)
            width        47%
            margin-right 20px

            &:nth-child(even)
                margin-right 0

        @media screen and (min-width:768px)
            width        31%

            &:nth-child(even)
                margin-right 20px

            &:nth-child(3n+3)
                margin-right 0

        @media screen and (min-width:1280px)
            width 18%

            &:nth-child(3n+3)
                margin-right 20px

            &:nth-child(5n+5)
                margin-right 0

        @media screen and (min-width:1600px)
            width 15%

            &:nth-child(5n+5)
                margin-right 20px

        @media screen and (min-width:2000px)
            width 15.5%


    & > li > img
        height     auto
        width      100%
        display    block
        text-align center


    & > li:hover > .info
    & > li:hover > .button
        opacity 1
        box-sizing border-box
        box-shadow 5px 0 5px #9e9e9e

.info
    position   absolute
    top        0
    bottom     0
    left       0
    right      0
    padding    20px
    background rgba(0,0,0,0.8)
    opacity    0
    z-index    2
    transition opacity 0.2s ease-in-out
    box-sizing border-box
    & > h2
        color       #8ce912
        font-size   16px
        font-weight normal
        text-align  center
    & > p
        color #fff
        text-align center
        font-size 12px
        padding 0 10px 0 10px
        display none

        @media screen and (min-width:1600px)
            display block

    & > .button
        bottom  20px
        opacity 1

.button
    background    #8ce912
    border-radius 3px
    color         #000
    font-size     13px
    position      absolute
    left          40px
    right         40px
    z-index       2
    text-align    center
    bottom        10px
    border-radius 30px
    opacity       0
    padding       4px 0
    transition    opacity 0.2s ease-in-out


.button-group
    clearfix()
    text-align right
    padding 0 23% 0 0


.big-button
    background    #000
    display       inline-block
    text-align    center
    color         #fff
    font-size     20px
    padding       20px 30px
    border-radius 30px
    margin-left 20px
    transition color 0.2s ease-in-out

    &:hover
        color $green



.experience-wrap
    background $green
    position   relative
    padding    0 5% 100px

    .job-info
        column(4/12)
        text-align right

    .job-desc
        column(7/12, offset:1/12)

.experience-content
    min-height 1272px

.experience-block
    clear    both
    position relative

#job-sgi
    top 90px

#job-nexon
    top 125px

#job-mindlinq
    top 172px

.experience-line
    background url(../img/experience-line.png) no-repeat
    width      50px
    height     1271px
    position   absolute
    top        0
    left       35%

.job-info
    & > h1
        color          #fff
        font-size      26px
        text-transform uppercase

    & > ul
        clear      both
        color      #000
        font-size  16px
        font-style italic
        list-style none

        & > li
            margin-bottom 10px

.view-btn
    background    url(../img/view-btn.png) no-repeat
    width         179px
    height        32px
    text-indent   -9999em
    display       block
    float         right
    text-align    left
    margin-bottom 30px

.job-desc
    color #000

    & > h2
        font-size      20px
        text-transform capitalize

    & > p
        font-size   14px
        margin      0


.modal-content
    background    #f3f3f3
    border-radius 10px
    padding       20px 100px
    text-align    left
    max-width     780px
    margin        10px auto
    position      relative
    text-transform capitalize

    & > h2
        color       black
        font-size   24px
        font-weight 400

    & > img
        width 100%
        height auto
        display block
        margin 0 auto 50px

    & > p
        color     #2d2d2d
        font-size 16px

    & > p > a
        font-weight 700
        color       #2d2d2d
        font-size   12px

        &:hover
            text-decoration underline

        & + a
            margin-left  10px
            padding-left 10px
            border-left  solid 1px #2d2d2d
