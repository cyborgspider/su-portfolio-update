//Imports
@import 'nib'
@import 'jeet'
//Mixins
normalize-css()

//Variables
$yellow = #faee4e
$red    = #d80000
$green  = #70d02f

//Styles
body
    font-size   12px
    line-height 18px
    font-family 'Source Sans Pro', Verdana, sans-serif
    color       #ddd
    height      100%
    background  #f3f3f3
    padding-top 80px

a
    text-decoration none
       
.nav-top-wrap
    background    #fff
    height        80px
    width         100%
    border-bottom solid 1px #539b23
    box-shadow    0 1px 0 #cfcfcf
    box-sizing    border-box
    padding       30px 0
    position      fixed
    top           0
    z-index       10

    h1
        display none

.nav-links
    float       right
    margin      0 12px 0 0
    padding     0
    list-style  none
    font-weight bold

    & > li
        float left

    & > li > a
      padding       12px 50px
      border-radius 20px
      color         black
      background    transparent
      transition    background 0.2s ease-out, color 0.2s ease-out
        
    & > li > a.active
    & > li > a:hover
            background $green
            color      white
      
.social-links
    float      right
    margin     -10px 0 0
    padding    0
    list-style none
    
    & > li 
        float         left
        width         40px
        height        40px
        border-radius 50%
        line-height   40px
        background    #000
        text-align    center
        
    & > li > a
        width   100%
        height  100%
        display block
        
    & > li > a > img
        vertical-align middle

.page-content
    clear both
    
.container
    max-width 1200px
    margin    0 auto
    position  relative    
    
.hero
    background $green
    min-height 828px
    color      white
    
    h1
        font-size   50px
        line-height 1.5
        padding-top 490px
    
    .left-col
    .right-col
        column(1/2)    
        
.counter-box
    position   absolute
    border     solid 10px #fafafa
    box-shadow 0 1px 0 #000
    box-sizing border-box
    width      255px
    height     255px
    top        -20px
    left       0
    background blue
    text-align center
    padding    50px 0
    z-index    11
    
    & > p
        margin 0
        
    
.count
    font-size 110px
    
.count-number
    line-height 110px
    font-size   36px

.projects
    clearfix()
    list-style none
    margin     0
    padding    0

    & > li
        position   relative
        width      100%
        background #FFF
        padding 5px
        float      left
        border     15px solid #f3f3f3
        box-sizing border-box

        @media screen and (min-width:480px)
            width 33.3333%

        @media screen and (min-width:1280px)
            width 20%

        @media screen and (min-width:1600px)
            width 14%

    & > li > img
        height     100%
        width      100%
        box-shadow 5px 5px 5px #c7c7c7
        display block
        text-align center

    & > li:hover > .info
    & > li:hover > .button
        opacity 1


.info
    position   absolute
    top        0
    bottom     0
    left       0
    right      0
    padding    20px
    background rgba(0,0,0,0.8)
    opacity    0
    z-index    2
    transition opacity 0.2s ease-in-out
    box-sizing border-box
    & > h2
        color       $red
        font-size   16px
        font-weight normal
        text-align  center
    & > p
        color #fff
        text-align center
        font-size 12px
        padding 0 10px 0 10px

    & > .button
        bottom  42px
        opacity 1

.button
    background    $red
    border-radius 3px
    color         #FFF
    font-size     11px
    position      absolute
    left          40px
    right         40px
    z-index       2
    text-align    center
    bottom        10px
    border-radius 3px
    opacity       0
    padding       4px 0
    transition    opacity 0.2s ease-in-out


.footer-wrap
    background $green
    height     30px
    position   relative
    width      100%
    clear      both
    border-top 1px solid #ff4200

.footer
    width       1000px
    padding-top 6px
    margin      0 auto
    text-align  center
    font-size   11px
    width       100%

.modal-content
    background    white
    border-radius 10px
    padding       50px 100px
    text-align    center
    max-width     780px
    margin        10px auto

    & > h2
        color          black
        text-transform uppercase

    & > img
        width 100%
        height auto
        display block
        margin 0 auto 50px


