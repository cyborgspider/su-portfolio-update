//Imports
@import 'nib'
@import 'jeet'
//Mixins
normalize-css()

//Variables
$yellow = #faee4e
$red    = #d80000

//Styles
body
    font-size   12px
    line-height 18px 
    font-family 'Source Sans Pro', Verdana, sans-serif
    color  #ddd
    height 100%
    background #f3f3f3
    
a
    text-decoration none

.nav-top-wrap
    background #363636
    box-shadow inset 0 -4px 4px 0 #181818
    height     67px
    width      100%

.nav-links-wrap
    background    $red
    width         100%
    height        48px
    box-shadow    0 0 3px 1px #181818
    border        solid 1px #ff4200
    margin-bottom 5px

.nav-top
    width    960px
    margin   0 auto
    position relative
  
    & > h1
        font       normal 32px 
        font-family 'Source Sans Pro', Verdana, sans-serif
        float      left
        margin-top 14px
    
    & > h1 > a
      color           #fefefe
      text-decoration none

.link-resume
    width       63px
    height      56px
    background  url(../img/link-resume.png) no-repeat
    float       left
    text-indent -9999px
    margin-left 12px
    display     block
      
      &:hover
        background-position 100% 0

.nav-links
    width    960px
    height   56px
    margin   0 auto
    overflow hidden
    padding  0
  
    & > li
        float      left
        
    &         > li > a
      display block
      width   100%
      height  100%
      color   white

.page-content
    clear both

.projects
    clearfix()
    list-style none
    margin     0
    padding    50px 100px
    
    & > li
        position   relative
        width      100%
        background #FFF
        padding 5px
        float      left
        border     15px solid #f3f3f3
        box-sizing border-box
        
        @media screen and (min-width:480px)
            width 33.3333%        
        
        @media screen and (min-width:1280px)
            width 20%
            
        @media screen and (min-width:1600px)
            width 14%            
        
    & > li > img
        height     100%
        width      100%
        box-shadow 5px 5px 5px #c7c7c7
        display block
        text-align center

    & > li:hover > .info
    & > li:hover > .button
        opacity 1
        

.info
    position   absolute
    top        0
    bottom     0
    left       0
    right      0
    padding    20px
    background rgba(0,0,0,0.8)
    opacity    0
    z-index    2
    transition opacity 0.2s ease-in-out
    box-sizing border-box
    & > h2
        color       $red
        font-size   16px
        font-weight normal
        text-align  center
    & > p
        color #fff
        text-align center
        font-size 12px
        padding 0 10px 0 10px
        
    & > .button
        bottom  42px
        opacity 1

.button
    background    $red
    border-radius 3px
    color         #FFF
    font-size     11px
    position      absolute
    left          40px
    right         40px
    z-index       2
    text-align    center
    bottom        10px
    border-radius 3px
    opacity       0
    padding       4px 0
    transition    opacity 0.2s ease-in-out


.footer-wrap
    background $red
    height     30px
    position   relative
    width      100%
    clear      both
    border-top 1px solid #ff4200

.footer
    width       1000px
    padding-top 6px
    margin      0 auto
    text-align  center
    font-size   11px
    width       100%

.modal-content
    background    white
    border-radius 10px
    padding       50px 100px
    text-align    center
    max-width     780px
    margin        10px auto
    
    & > h2
        color          black
        text-transform uppercase

    & > img
        width 100%
        height auto
        display block
        margin 0 auto 50px
        
        