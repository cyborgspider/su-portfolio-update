//Imports
@import 'nib'
@import 'jeet'
//Mixins
normalize-css()

//Variables
$yellow = #faee4e
$red    = #d80000
$green  = #00d084

//Styles
body
    font-size   14px
    line-height 22px
    font-family 'Open Sans', Verdana, sans-serif
    color       #ddd
    height      100%
    background  #f3f3f3

a
    text-decoration none

.nav-top-wrap
    background rgba(255,255,255,0.1)
    display    none
    height     80px
    width      100%
    box-sizing border-box
    padding    30px 5%
    position   fixed
    top        0
    z-index    10
    transition background 0.2s ease-in-out

    @media (min-width:800px)
        display block

    h1
        display none

    &.-not-hero
        background rgba(255,255,255,0.7)

.nav-links
    float          left
    margin         0 12px 0 0
    padding        0
    list-style     none
    font-weight    700
    font-size      14px
    text-transform uppercase

    & > li
        float left

    & > li > a
      padding       10px 30px
      margin-right  20px
      border-radius 30px
      color         black
      background    transparent
      transition    background 0.2s ease-out, color 0.2s ease-out

    & > li > a.active
    & > li > a:hover
            background $green
            color      white

.nav-animation
    left       0
    position   absolute
    margin-top -120px
    transition margin-top 0.8s ease-in-out

    &.active
        margin-top -30px

.social-links
    float      right
    margin     -10px 0 0
    padding    0
    list-style none

    & > li
        float         left
        width         37px
        height        37px
        border-radius 50%
        line-height   35px
        background    #000
        text-align    center
        margin-right  5px

    & > li > a
        width   100%
        height  100%
        display block

    & > li > a > img
        vertical-align middle

.mobile-nav
    padding    15px 0
    background rgba(255, 255, 255, 0.1)
    position   fixed
    top        0
    left       0
    right      0
    z-index    10

    &.-not-hero
        background rgba(255,255,255,0.7)

    @media (min-width:800px)
        display none
    &.-active
        background black

        .icon-menu
            display none
        .icon-close
            display block
        .mobile-links
            display block

.icon-menu
    display    block
    width      40px
    margin     0 auto
    cursor     pointer
    list-style none
    padding    0

    & > li
        width         100%
        background    #000
        height        6px
        border-radius 12px
        margin-bottom 4px

.icon-close
    background url(../img/icon-close.png) no-repeat
    width      26px
    height     27px
    margin     0 auto
    display    none
    cursor     pointer

.mobile-links
    list-style none
    display    none
    font-size  18px
    margin     0
    padding    0 24px

    & > li
        border-bottom solid 1px #ADADAD
        padding 10px
        &:last-child
            border-bottom none

    & li > a
        color   #ADADAD
        display block
        width   100%
        height  100%
        &:hover
            color white

.mobile-img
    width 100%
    height auto
    @media (min-width:800px)
        display none

.page-content
    clear both

.container
    width     100%
    margin    0 auto
    position  relative

.hero
    background $green
    color      white
    padding    80px 0 20px
    text-align center
    transition background 0.8s ease-in-out

    @media (min-width:800px)
        padding-bottom 80px

    & > .container
        max-width  980px
        box-sizing border-box
        padding    0 24px

    h1
        font-size   70px
        font-weight 600
        line-height 1.2
        margin      0

        @media (min-width:800px)
            font-size 90px

    p
        font-weight   500
        font-size     16px
        line-height   1.5
        margin-bottom 30px

        @media (min-width:800px)
            font-size 20px

.hero-gradient
    position absolute
    left     0
    right    0
    top      0
    bottom   0
    width    100%
    height   100%

.hero-day
    background linear-gradient(to bottom, #33cccc 0%, #33cc99 50%, #009966 100%)

.hero-noon
    background linear-gradient(to bottom, #ff9c4d 0%, #19cbbc 50%, #009966 100%)

.hero-night
    background linear-gradient(to bottom, #2a1d36 0%, #11475a 50%, #009966 100%)

.hero-day
.hero-noon
.hero-night
    position   absolute
    left       0
    top        0
    opacity    0
    transition opacity 1s ease-in-out
    width      100%
    height     100%
    &.-active
        opacity 1


.hero-img
    width    100%
    position relative
    height   200px

    @media (min-width:400px)
        height 300px

    @media (min-width:600px)
        height 422px

    & > img
        position   absolute
        z-index    0
        opacity    0
        transform  translateX(-55%)
        transition opacity 0.8s ease-in-out
        width      100%

        &.-active
            z-index 1
            opacity 1

        @media (min-width:800px)
            width auto

.counter-box
    position         absolute
    border           solid 10px #fafafa
    box-shadow       0 1px 0 #000
    box-sizing       border-box
    background-color #cbcbcb
    width            155px
    height           155px
    top              -55px
    left             0
    text-align       center
    padding          30px 0
    z-index          11

    @media screen and (min-width:1600px)
        width   255px
        height   255px
        padding 50px 0

    & > p
        margin 0

.counter-box p
    font-size 14px
    padding   0 5px

    @media screen and (min-width:1600px)
        font-size 20px

.count
    font-size 60px

    @media screen and (min-width:1600px)
        font-size 120px

.count-number
    line-height 55px
    font-size   18px
    font-weight 700

    @media screen and (min-width:1600px)
        line-height 110px
        font-size   36px

.projects
    clearfix()
    list-style none
    margin     0
    padding    50px 10%
    clear      both

    @media screen and (min-width:1280px)
        padding 50px 5%

    & > li
        position   relative
        width      100%
        float      left
        box-sizing border-box
        box-shadow 2px 0 2px #b5b5b5
        border     6px solid #fff
        margin     0 0 20px 0

        @media screen and (min-width:480px)
            width        47%
            margin-right 20px

            &:nth-child(even)
                margin-right 0

        @media screen and (min-width:768px)
            width        31%

            &:nth-child(even)
                margin-right 20px

            &:nth-child(3n+3)
                margin-right 0

        @media screen and (min-width:1280px)
            width 18%

            &:nth-child(3n+3)
                margin-right 20px

            &:nth-child(5n+5)
                margin-right 0

        @media screen and (min-width:1600px)
            width 15%

            &:nth-child(5n+5)
                margin-right 20px

        @media screen and (min-width:2000px)
            width 15.5%


    & > li > img
        height     auto
        width      100%
        display    block
        text-align center


    & > li:hover > .info
    & > li:hover > .button
        opacity 1
        box-sizing border-box
        box-shadow 5px 0 5px #9e9e9e

.info
    position   absolute
    top        0
    bottom     0
    left       0
    right      0
    padding    20px
    background rgba(0,0,0,0.8)
    opacity    0
    z-index    2
    transition opacity 0.2s ease-in-out
    box-sizing border-box
    & > h2
        color       #8ce912
        font-size   16px
        font-weight normal
        text-align  center
    & > p
        color #fff
        text-align center
        font-size 12px
        padding 0 10px 0 10px
        display none

        @media screen and (min-width:1600px)
            display block

    & > .button
        bottom  20px
        opacity 1

.button
    background    #8ce912
    border-radius 3px
    color         #000
    font-size     13px
    position      absolute
    left          40px
    right         40px
    z-index       2
    text-align    center
    bottom        10px
    border-radius 30px
    opacity       0
    padding       4px 0
    transition    opacity 0.2s ease-in-out


.button-group
    clearfix()
    padding 30px 0 0
    text-align right

.big-button
    background     #000
    display        block
    margin-bottom  20px
    text-align     center
    color          #fff
    font-size      16px
    padding        12px 30px
    border-radius  30px
    margin-left    20px
    transition     color 0.2s ease-in-out
    text-transform uppercase

    @media (min-width:480px)
        display       inline-block

    &:hover
        color $green



.experience-wrap
    background #008a58
    position   relative
    padding    0 5% 40px

    .job-info
        padding 20px 0 0
        text-align center
        @media (min-width:800px)
            column(4/12)
            text-align right
            padding 0

    .job-desc
        @media (min-width:800px)
            column(7/12, offset:1/12)

.experience-content
    @media (min-width:800px)
        min-height 1272px

.experience-block
    clear       both
    position    relative
    padding-top 40px

