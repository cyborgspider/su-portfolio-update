//Imports
@import 'nib'
@import 'jeet'
//Mixins
normalize-css()

//Variables
$yellow = #faee4e
$red    = #d80000
$green  = #6FCE2F

//Styles
body
    font-size   14px
    line-height 22px
    font-family 'Open Sans', Verdana, sans-serif
    color       #ddd
    height      100%
    background  #f3f3f3
    padding-top 80px

a
    text-decoration none

.nav-top-wrap
    background    #fff
    height        80px
    width         100%
    border-bottom solid 1px #539b23
    box-shadow    0 1px 0 #cfcfcf
    box-sizing    border-box
    padding       30px 5%
    position      fixed
    top           0
    z-index       10

    h1
        display none

.nav-links
    float       right
    margin      0 12px 0 0
    padding     0
    list-style  none
    font-weight bold
    font-size   14px

    & > li
        float left

    & > li > a
      padding       10px 30px
      margin-right  20px
      border-radius 30px
      color         black
      background    transparent
      transition    background 0.2s ease-out, color 0.2s ease-out

    & > li > a.active
    & > li > a:hover
            background $green
            color      white

.social-links
    float      right
    margin     -10px 0 0
    padding    0
    list-style none

    & > li
        float         left
        width         37px
        height        37px
        border-radius 50%
        line-height   35px
        background    #000
        text-align    center
        margin-right  5px

    & > li > a
        width   100%
        height  100%
        display block

    & > li > a > img
        vertical-align middle

.page-content
    clear both

.container
    width     100%
    margin    0 auto
    position  relative

.hero
    background $green
    min-height 550px
    color      white
    padding    0 5%

    h1
        font-size   32px
        font-weight 600
        line-height 1.2
        padding-top 180px

        @media screen and (min-width:1366px)
            font-size 45px

        @media screen and (min-width:1600px)
            font-size 50px


    .left-col
        span(1/2)
        line-height  1.6
        font-size    16px
        font-weight  300
        box-sizing   border-box
        // padding-left 150px

    .right-col
        span(1/2)
        position relative
        min-height 550px

        & > img
            width    100%
            height   auto
            position absolute
            bottom   0
            right    0

.counter-box
    position         absolute
    border           solid 10px #fafafa
    box-shadow       0 1px 0 #000
    box-sizing       border-box
    width            155px
    height           155px
    top              -55px
    left             0
    background-image url(../img/counter-box-bg.jpg)
    text-align       center
    padding          30px 0
    z-index          11

    @media screen and (min-width:1600px)
        width   255px
        width   255px
        padding 50px 0

    & > p
        margin 0

.counter-box p
    font-size 14px
    padding   0 5px

    @media screen and (min-width:1600px)
        font-size 20px

.count
    font-size 60px

    @media screen and (min-width:1600px)
        font-size 120px


.count-number
    line-height 55px
    font-size   18px
    font-weight 700

    @media screen and (min-width:1600px)
        line-height 110px
        font-size   36px

.projects
    clearfix()
    list-style none
    margin     50px 130px
    padding    0

    & > li
        position   relative
        width      100%
        float      left
        box-sizing border-box
        box-shadow 5px 0 5px #c7c7c7
        border     6px solid #fff
        margin     0 0 20px 0

        @media screen and (min-width:480px)
            width        31%
            margin-right 20px

            &:nth-child(3n+3)
                margin-right 0

        @media screen and (min-width:1280px)
            width 18%

            &:nth-child(3n+3)
                margin-right 20px

            &:nth-child(5n+5)
                margin-right 0

        @media screen and (min-width:1600px)
            width 14%

            &:nth-child(5n+5)
                margin-right 20px

    & > li > img
        height     auto
        width      100%
        display    block
        text-align center
        // border     6px solid #fff
        // margin     6px

    & > li:hover > .info
    & > li:hover > .button
        opacity 1

.info
    position   absolute
    top        0
    bottom     0
    left       0
    right      0
    padding    20px
    background rgba(0,0,0,0.8)
    opacity    0
    z-index    2
    transition opacity 0.2s ease-in-out
    box-sizing border-box
    & > h2
        color       $red
        font-size   16px
        font-weight normal
        text-align  center
    & > p
        color #fff
        text-align center
        font-size 12px
        padding 0 10px 0 10px

    & > .button
        bottom  42px
        opacity 1

.button
    background    $red
    border-radius 3px
    color         #FFF
    font-size     11px
    position      absolute
    left          40px
    right         40px
    z-index       2
    text-align    center
    bottom        10px
    border-radius 3px
    opacity       0
    padding       4px 0
    transition    opacity 0.2s ease-in-out

.button-group
    clearfix()
    text-align right

.big-button
    background    #000
    text-align    center
    color         #fff
    font-size     26px
    padding       20px 30px
    border-radius 20px

.experience-wrap
    background $green
    position   relative
    padding    0 5% 100px
    min-height 1200px

    .job-info
        column(4/12)
        text-align right

    .job-desc
        column(7/12, offset:1/12)

.experience-block
    clear    both
    position relative

#job-sgi
    top 90px

#job-nexon
    top 125px

#job-mindlinq
    top 172px

.experience-line
    background url(../img/experience-line.png) no-repeat
    width      50px
    height     1271px
    position   absolute
    top        0
    left       35%

.job-info
    & > h1
        color          #fff
        font-size      26px
        text-transform uppercase

    & > ul
        clear      both
        color      #000
        font-size  16px
        font-style italic
        list-style none

        & > li
            margin-bottom 10px

.view-btn
    background    url(../img/view-btn.png) no-repeat
    width         179px
    height        32px
    text-indent   -9999em
    display       block
    float         right
    text-align    left
    margin-bottom 30px

.job-desc
    color #000

    & > h2
        font-size      20px
        text-transform uppercase

    & > p
        font-size   14px
        margin      0


.modal-content
    background    white
    border-radius 10px
    padding       50px 100px
    text-align    center
    max-width     780px
    margin        10px auto

    & > h2
        color          black
        text-transform uppercase

    & > img
        width 100%
        height auto
        display block
        margin 0 auto 50px


